<% if @article.errors.any? %>
    <h2>The following errors prevented the article from getting created</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>


<div class="row">
    
    <%=  form_for @article do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <div >
        <%= f.text_field :title, class: "form-control", id: "exampleInputTitle1", placeholder: "Title" %>
        </div>
    </div>
        
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, class: "form-control", id: "exampleInputDescription1", placeholder: "Description" %>
    </div>
    
    <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
    </div>
</div>
    <%end%>
<div class="col-sm-6 col-sm-offsit-4 cancle", align="center">
    [ <%= link_to "cancle request and return to articles list", articles_path %> ]
</div>