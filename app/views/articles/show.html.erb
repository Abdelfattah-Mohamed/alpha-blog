<h2 align="center"> <%= @article.title %>  </h2>
    

<div class="well center">
    <ul class="listing">
        <div class= "row">
            <div class = "col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
                <li><%= link_to @article.user.username, user_path(@article.user) %></li>
                <li><small> <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %> </small></li>
            </div>
        </div>
    </ul>
    <h3 class="center"> Description </h3>
    <hr>
    <%= simple_format(@article.description) %> 
    <hr>
    <%= link_to "Articles", articles_path, class: "btn btn-success" %> ||
    <%= link_to " Edit", edit_article_path(@article), class: "btn btn-primary glyphicon glyphicon-edit" %> ||
    <%= link_to "", article_path(@article), method: :delete, data: {confirm: "Are you sure?"},class: "btn btn-danger glyphicon glyphicon-trash" %>
</div>


