<div class = "container">
    <div class ="row">
        <div class= "col col-sm-8 col-sm-offset-0">
            <div class="container well center">
                <h1 align="center"> Articles Listing</h1>
                <%= link_to " New", new_article_path, class: "btn btn-primary glyphicon glyphicon-plus" %>
            </div>
        </div>
    </div>

    <% @articles.each do |article| %>
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h2 class="panel-title"><%= article.title %></h2>
        </div>
        <div class="panel-body">
            <%= article.description %>
            <hr>
            <%= link_to "Show", article_path(article), class: "btn btn-success" %> ||
            <%= link_to " Edit", edit_article_path(article),class: "btn btn-primary glyphicon glyphicon-edit" %> ||
            <%= link_to "", article_path(article), method: :Delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger glyphicon glyphicon-trash"%>
        </div>
    </div>
    <% end %>
</div>